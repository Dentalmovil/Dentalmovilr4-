import { useState, useEffect } from 'react';

export default function PokemonList() {
  const [pokemons, setPokemons] = useState([]); // Estado para los datos
  const [loading, setLoading] = useState(true); // Estado de carga

  useEffect(() => {
    // Función para pedir los datos
    const fetchData = async () => {
      try {
        const response = await fetch('https://pokeapi.co/api/v2/pokemon?limit=12');
        const data = await response.json();
        setPokemons(data.results);
        setLoading(false);
      } catch (error) {
        console.error("Error cargando datos:", error);
        setLoading(false);
      }
    };

    fetchData();
  }, []); // El array vacío [] significa: "ejecuta esto solo una vez al cargar"

  if (loading) return <p className="text-center text-blue-500 font-bold">Cargando Pokémon...</p>;

  return (
    <div className="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
      {pokemons.map((pokemon, index) => (
        <div key={index} className="border p-4 rounded-lg shadow hover:shadow-lg transition-shadow bg-white text-center">
          <img 
            src={`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/${index + 1}.png`} 
            alt={pokemon.name}
            className="mx-auto w-24 h-24"
          />
          <h3 className="capitalize font-semibold text-lg text-gray-700">{pokemon.name}</h3>
          <button className="mt-2 bg-blue-500 text-white px-4 py-1 rounded-full text-sm hover:bg-blue-600">
            Ver detalles
          </button>
        </div>
      ))}
    </div>
  );
}
// ... otros imports
import PokemonList from './components/PokemonList';

// Dentro de tus Routes
<Route path="/" element={<MainLayout />}>
  <Route index element={<PokemonList />} /> {/* Ahora la home mostrará los Pokémon */}
  <Route path="perfil" element={<Profile />} />
</Route>
